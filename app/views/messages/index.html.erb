<div class="row">
  <div class="col-md-12">
    <%-if current_user.present? && !current_user.is_admin? %>
      <%= link_to 'Create new request to support', new_message_path, class: 'btn btn-info' %>
    <%-end %>
    <%-if current_user&.is_admin? && @messages.count <= 0%>
      <h3>You do not have any request!</h3>
    <%-end %>
    <%= render partial: 'messages/list_request', locals: { messages: @messages } %>
  </div>
</div>
